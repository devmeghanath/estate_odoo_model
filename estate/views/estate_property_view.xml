<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_view" model="ir.actions.act_window">
        <field name="name">estate property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate_property_view_tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="estate_property_tree">
                <field name="property_type_id"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="available_from"/>
            </tree>
        </field>
    </record>


    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property_view_form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_property_form">
                <sheet>
                    <group>
                       <div class="oe_title">

                           <h1>
                               <field name="name" placeholder="Name"/>
                           </h1>
                       </div>
                        <div>
                            <field name="property_tag_ids" widget="many2many_tags" placeholder="Tags"/>
                        </div>

                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="available_from"/>
                            <field name="property_type_id"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>

                        </group>
                    </group>
                    <notebook>
                        <page name="Description" string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible':[('garden','==',False)]}"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page name="other_info" string="Other Info">
                            <group>
                                <field name="buyer"/>
                                <field name="sales_person"/>
                            </group>
                        </page>
                        <page name="offers" string="Offers">
                            <group>
                                <field name="offer_ids"/>

                            </group>
                        </page>
                    </notebook>


                </sheet>
            </form>
        </field>
    </record>


<!--    serach-->


    <record id="estate.property_search" model="ir.ui.view">
       <field name="name">property_search</field>
       <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="property search">
                <field name="name"/>
                <field name="bedrooms"/>
                <field name="postcode"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="available_properties" string="Available Properties"  domain="['|',('state', '=','new' ),('state','=','offer_received') ]"/>
                <filter name="group_postcode" string="Postcode" domain="[]" context="{'group_by': 'postcode'}"/>


        </search>
       </field>
    </record>
</odoo>